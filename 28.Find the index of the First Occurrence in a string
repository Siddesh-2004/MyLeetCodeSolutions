class Solution {
public:
    int strStr(string haystack, string needle) {
        int count=0;
        for(int i=0;i<haystack.length();i++){
            for(int j=0;j<needle.length();j++){
                if(haystack[i+j]==needle[j]){
                    count++;
                }else{
                    count=0;
                    break;
                }

            }
            if(count==needle.length())return i;
        }
        return -1;
    }

};
